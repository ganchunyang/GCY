                        // Duplicate symbols
                        use.text(xlink:href='#s-text')
                        use.text(xlink:href='#s-text')
                        use.text(xlink:href='#s-text')
                        use.text(xlink:href='#s-text')
                        use.text(xlink:href='#s-text')
                .am-u-sm-10.login-form
